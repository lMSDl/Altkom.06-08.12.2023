<Page x:Class="ArchitecturalPatterns.Views.MvvmView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchitecturalPatterns.Views"
      xmlns:vm="clr-namespace:ArchitecturalPatterns.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MvvmView">

    <Page.DataContext>
        <vm:ViewModel/>
    </Page.DataContext>
    
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding InputValue}" />
            <Label Content="{Binding Model.Value}" />
            <Button>Save</Button>
            <Button>Load</Button>
        </StackPanel>
    </Grid>
</Page>
